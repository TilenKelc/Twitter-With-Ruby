<div class='row'>
    <div class='col-sm login-image height'>
      <%= image_tag("/assets/logo.jpg",  alt: "Logo", class: "image") %>
      <h2>Welcome to Twitter</h2>
      <p>(This site is part of a school project)</p>
    </div>

    <div class='col-sm height center'>
      <div class='container-small box'>
      <h2>Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field left-align">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

      </div>
    </div>
</div>
